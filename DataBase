-- Creacion de la tabla Guarniciones
create table Guarniciones(
id_guarniciones INT primary key,
Nombre_guarniciones varchar(50) not null,
ingredientes text,
Precio DECIMAL(10, 2) not null,
ID_Categoria INT,
 FOREIGN KEY (ID_Categoria) REFERENCES Categorias(ID_Categoria)

);

-- insercion de Guarniciones 
insert into Guarniciones(id_guarniciones, Nombre_guarniciones, ingredientes, Precio, ID_Categoria) values
