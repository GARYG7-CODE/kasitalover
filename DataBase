-- Creacion de la tabla bebidas
create table Bebidas(                    
id_bebidas INT primary key,
Nombre_bebidas varchar(50) not null,
Sabores text,
Precio DECIMAL(10, 2) not null,
ID_Categoria INT,
 FOREIGN KEY (ID_Categoria) REFERENCES Categorias(ID_Categoria)

);

