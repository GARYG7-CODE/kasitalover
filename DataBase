(4, 'Ensalada César', 'Lechuga, pollo, croutones, aderezo César', 90.75, 3);



-- Creación de la tabla Pedidos
CREATE TABLE Pedidos (
    Id_Pedidos INT AUTO_INCREMENT PRIMARY KEY,
    Descripcion TEXT,
    Cantidad INT,
    Total DECIMAL(10, 2) NOT NULL,
    Fecha_pedidos DATETIME DEFAULT CURRENT_TIMESTAMP,
    Id_Platos INT,
    FOREIGN KEY (Id_Platos) REFERENCES Platos(Id_Platos)
);

-- Inserción de datos en la tabla Pedidos
INSERT INTO Pedidos (Descripcion, Cantidad, Total, Id_Platos) VALUES
('Pedido 1', 2, 31.98, 1),
('Pedido 2', 1, 12.50, 2),
('Pedido 3', 3, 56.25, 3);

-- Inserción de datos en la tabla usuarios
CREATE TABLE usuarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL
);

